<% if @department.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= @department.errors.full_messages.join(";") %>
  </div>
<% end %>

<%= form_for(@department, role: "form") do |f| %>
  <div class="form-group">
    <%= f.label :name, "部门名称" %>
    <%= f.text_field :name, class: "form-control", placeholder: "部门名称" %>
  </div>
  <div class="form-group">
    <%= f.label :parent_id, "上级部门" %>
    <%= f.select :parent_id, @departments, {}, {class: "form-control"} %>
  </div>
  <button type="submit" class="btn btn-primary">保存</button>
  <%= link_to '取消', departments_path, class: "btn btn-danger" %>
<% end %>


