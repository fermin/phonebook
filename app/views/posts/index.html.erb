<div>
    <h3 class="page_title">职位管理</h3> 
    <%= link_to '添加新职位', new_post_path, :class => "btn btn-primary new_btn" %>
</div>

<table class="table table-striped">
  <tr>
    <th>名称</th>
    <th>所属部门</th>
    <th>操作</th>
  </tr>

  <% @posts.includes(:department).each do |post| %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.department.name %></td>
      <td><%= link_to '编辑', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate(@posts, :renderer => WillPaginate::ActionView::LinkRenderer) %>
