<% if @post.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= @post.errors.full_messages.join(";") %>
  </div>
<% end %>

<%= form_for(@post, role: "form") do |f| %>
  <div class="form-group">
    <%= f.label :name, "职位名称" %> <span class="required">*</span>
    <%= f.text_field :name, class: "form-control", placeholder: "职位名称" %>
  </div>
  <div class="form-group">
    <%= f.label :department_id, "隶属部门" %> <span class="required">*</span>
    <%= f.select :department_id, @departments, {}, {class: "form-control"} %>
  </div>
  <button type="submit" class="btn btn-primary">保存</button>
  <%= link_to '取消', posts_path, class: "btn btn-danger" %>
<% end %>



